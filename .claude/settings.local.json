{
  "permissions": {
    "allow": [
      "WebFetch(domain:*)",
      "Bash(mv:*)",
      "Bash(dotenvx run:*)",
      "Bash(bun run:*)",
      "Bash(pnpx:*)",
      "Bash(pnpm:*)",
      "Bash(chmod:*)",
      "Bash(mkdir:*)",
      "Bash(grep:*)",
      "Bash(find:*)",
      "Bash(cp:*)"
    ],
    "deny": ["Bash(npm:*)", "Bash(npmx:*)"]
  },
  "enabledMcpjsonServers": ["context7", "mastra"],
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '\"\\(.tool_input.command) - \\(.tool_input.description // \"No description\")\"' >> ~/.claude/bash-command-log.txt"
          }
        ]
      }
    ]
  }
}
