{
  "permissions": {
    "allow": [
      "WebFetch(*)",
      "Bash(mv:*)",
      "Bash(dotenvx run:*)",
      "Bash(bun run:*)",
      "Bash(grep:*)",
      "Bash(pnpx:*)",
      "Bash(pnpm:*)",
      "Bash(chmod:*)",
      "Bash(mkdir:*)"
    ],
    "deny": [
      "Bash(npm:*)",
      "Bash(npmx:*)"
    ]
  },
  "enabledMcpjsonServers": [
    "context7",
    "mastra"
  ],
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '\"\\(.tool_input.command) - \\(.tool_input.description // \"No description\")\"' >> ~/.claude/bash-command-log.txt"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "pnpm format"
          }
        ]
      }
    ]
  }
}